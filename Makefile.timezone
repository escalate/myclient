.DEFAULT_GOAL := all

tz = Europe/Berlin

.PHONY: update
update:
	sudo apt-get update

.PHONY: install
install: update
	sudo apt-get install --yes tzdata

.PHONY: timezone
timezone: install
	sudo sh -c 'echo "$(tz)" > /etc/timezone'

.PHONY: localtime
localtime: install
	sudo ln --symbolic --force "/usr/share/zoneinfo/$(tz)" /etc/localtime

.PHONY: all
all: timezone localtime
